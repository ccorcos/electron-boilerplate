{
  "name": "electron-boilerplate",
  "version": "0.0.1",
  "description": "Electron boilerplate with TypeScript.",
  "scripts": {
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "build:renderer": "NODE_ENV='production' webpack",
    "build:main": "NODE_ENV='production' tsc --project tsconfig.main.json",
    "build": "run-p build:renderer build:main",
    "watch:renderer": "webpack --watch",
    "watch:main": "tsc --watch --project tsconfig.main.json",
    "watch": "run-p watch:renderer watch:main",
    "start": "electron build/main/main.js",
    "test": "NODE_ENV='test' mocha -r ts-node/register './src/**/*.test.ts' --verbose"
  },
  "repository": "https://github.com/ccorcos/electron-boilerplate",
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^7.1.2",
    "fs-extra": "^9.0.1",
    "lodash": "^4.17.21",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "url": "^0.11.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^5.4.1",
    "@types/fs-extra": "^9.0.6",
    "@types/lodash": "^4.14.166",
    "@types/mocha": "whitecolor/mocha-types",
    "@types/node": "^14.14.16",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/uuid": "^8.3.0",
    "css-loader": "^5.0.1",
    "electron": "^11.1.1",
    "electron-rebuild": "^2.3.4",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.0",
    "mini-css-extract-plugin": "^1.3.3",
    "mocha": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^8.0.12",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "webpack": "^5.11.0",
    "webpack-cli": "^4.3.0"
  }
}
